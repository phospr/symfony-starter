{% extends "::phospr.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}
    {% block fos_user_content %}
        <div class="container">
            <h1>Log in to continue</h1>
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-8 col-xs-12">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if error %}
                            <div class="alert alert-warning" role="alert">
                                <i class="fa fa-fw fa-exclamation-circle"></i>
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div><!-- .alert -->
                        {% endif %}
                        <fieldset>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-fw fa-at"></i></span>
                                    <label
                                        class="sr-only"
                                        for="username"
                                    >
                                        {{ 'security.login.username'|trans }}
                                    </label>
                                    <input
                                        autofocus="autofocus"
                                        class="form-control"
                                        id="username"
                                        name="_username"
                                        required="required"
                                        value="{{ last_username }}"
                                        type="text"
                                        placeholder="Username or email address"
                                    />
                                </div>
                            </div><!-- .form-group -->

                            <div class="form-group">
                                <div class="input-group">
                                    <span class="input-group-addon" id="basic-addon1"><i class="fa fa-fw fa-key"></i></span>
                                    <label
                                        class="sr-only"
                                        for="password"
                                    >
                                        {{ 'security.login.password'|trans }}
                                    </label>
                                    <input
                                        class="form-control"
                                        id="password"
                                        name="_password"
                                        required="required"
                                        type="password"
                                        placeholder="Password"
                                    />
                                </div>
                            </div><!-- .form-group -->
                        </fieldset>

                        <button class="btn btn-primary btn-block btn-lg" type="submit" id="_submit" name="_submit">
                            {{ 'security.login.submit'|trans }}
                        </button>
                    </form>
                </div><!-- .col -->
            </div><!-- .row -->
        </div><!-- .container -->
    {% endblock fos_user_content %}
{% endblock %}
